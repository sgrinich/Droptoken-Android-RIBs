<?xml version="1.0" encoding="utf-8"?>
<com.uber.rib.root.game.GameView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tic_tac_toe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/go_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#f39c12"/>

    <Button
        android:id="@+id/new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="New Game"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#f39c12"/>


    <ProgressBar
        android:id="@+id/progress_loader"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/prompt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="50dp"
        android:text="It's your turn"
        android:textSize="32sp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/button11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/title"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="20%"
        android:background="@drawable/empty_piece"/>

    <TextView
        android:id="@+id/button12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@id/button11"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="20%"
        android:background="@drawable/empty_piece"/>

    <TextView
        android:id="@+id/button13"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@id/button12"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="20%"
        android:background="@drawable/empty_piece"/>

    <TextView
        android:id="@+id/button14"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@id/button13"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="20%"
        android:background="@drawable/empty_piece"/>
    <TextView
        android:id="@+id/button21"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_below="@id/button11"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="20%"
        android:background="@drawable/empty_piece"/>

    <TextView
        android:id="@+id/button22"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_below="@id/button11"
        android:layout_toRightOf="@id/button21"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="20%"
        android:background="@drawable/empty_piece"/>

    <TextView
        android:id="@+id/button23"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_below="@id/button13"
        android:layout_toRightOf="@id/button22"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="20%"
        android:background="@drawable/empty_piece"/>

    <TextView
        android:id="@+id/button24"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_below="@id/button14"
        android:layout_toRightOf="@id/button23"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="20%"
        android:background="@drawable/empty_piece"/>
    <TextView
        android:id="@+id/button31"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_below="@id/button21"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="20%"
        android:background="@drawable/empty_piece"/>

    <TextView
        android:id="@+id/button32"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_below="@id/button22"
        android:layout_toRightOf="@id/button21"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="20%"
        android:background="@drawable/empty_piece"/>

    <TextView
        android:id="@+id/button33"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_below="@id/button23"
        android:layout_toRightOf="@id/button22"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="20%"
        android:background="@drawable/empty_piece"/>

    <TextView
        android:id="@+id/button34"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_below="@id/button24"
        android:layout_toRightOf="@id/button33"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="20%"
        android:background="@drawable/empty_piece"/>
    <TextView
        android:id="@+id/button41"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_below="@id/button31"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="20%"
        android:background="@drawable/empty_piece"/>

    <TextView
        android:id="@+id/button42"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_below="@id/button32"
        android:layout_toRightOf="@id/button41"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="20%"
        android:background="@drawable/empty_piece"/>

    <TextView
        android:id="@+id/button43"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_below="@id/button33"
        android:layout_toRightOf="@id/button42"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="20%"
        android:background="@drawable/empty_piece"/>

    <TextView
        android:id="@+id/button44"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_below="@id/button34"
        android:layout_toRightOf="@id/button43"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="20%"
        android:background="@drawable/empty_piece"/>
</com.uber.rib.root.game.GameView>